{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true

  },
  "lib": [ "es2017" ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings/global",
    "typings/global.d.ts"
  ],
  "compileOnSave": true

}
